# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_style = space
indent_size = 4

# .prettierrc.json.rc
# please define code style specific rules (like indent_size) in .prettierrc.json.rc instead.
# otherwise prettier will obey .editorconfig and override every supportted file type defaults.

[*.md]
# can be significant for newlines in Markdown
trim_trailing_whitespace = false
